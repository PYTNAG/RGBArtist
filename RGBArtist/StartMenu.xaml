<Window x:Class="RGBArtist.StartMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RGBArtist"
        mc:Ignorable="d"
        Title="RGBArtist - Select Module" Height="266" Width="482">
    <Grid Margin="0,0,0,0">
        <ScrollViewer Margin="162,10,10,10">
            <StackPanel x:Name="ModuleScrollViewer"/>
        </ScrollViewer>
        <Button 
            Content="Load external module" 
            HorizontalAlignment="Left" 
            Margin="10,10,0,0" 
            VerticalAlignment="Top" 
            Height="45" 
            Width="147"
            Click="LoadExteranlModule"
        />
    </Grid>
</Window>
